@font-face
    font-family Oswald
    src url(../fonts/Oswald-Regular.ttf)

//HEADER

header
    padding-top 20px
    #logo
        height 100px
        margin 100px 0 0 -100px
        transition all 1.5s linear
    .rollOut
        transform translate(50vw) rotate(360deg) scale(2)
        margin 50px 50px 50px -50px!important

//PERS

#pers
    padding 10px
    background url(../images/star_wars_bg.jpg)
    background-position center
    background-size cover

section
    h2
        font-size 32px
        font-family "Oswald"
        color rgb(255, 255, 255)
        font-weight bold
        text-transform uppercase
        line-height 1.2
        text-align center
        margin 0 auto 10px

#pers_section
    background rgba(255, 255, 255, 0.5)
    display flex
    justify-content space-between
    flex-wrap wrap
    width 70%
    margin 0 auto
    padding 10px
    .pers
        background rgb(255, 255, 255)right
        width 30%
        border 1px solid black
        margin-bottom 10px
        padding 5px
        input
            float right
            margin-top 2.5px

@media(max-width 800px)
    #pers_section
        .pers
            width 80%
            margin 0 auto

    //FOOTER

footer
    background-color rgb(250, 250, 250)
    padding 75px 10px 75px 74px
    text-align center


